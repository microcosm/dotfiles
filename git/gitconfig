[alias]
co = checkout
br = branch
ci = commit
st = status
last = log -1 HEAD
pr = pull --rebase
unstage = reset HEAD --
l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
df = diff
lg = log -p
[user]
  name = Andrew McWilliams
  email = andy@jahya.net
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
[core]
editor = mvim -v
[push]
	default = simple
[credential]
	helper = osxkeychain
